{% comment %}
  Footer - Hannah Martin
  Always loads section-footer.css
{% endcomment %}

{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<footer id="footer" class="siteFooter">
  <div class="footer-inner">
    <div class="footer-logotype">
      <a href="/" aria-label="Go to the homepage">
        <img
          class="svg"
          src="{{ 'hannah_martin-logotype.svg' | asset_url }}"
          width="410"
          height="29"
          alt="Hannah Martin Icon">
      </a>
    </div>

    <div class="flex navitems">

      {%- if section.settings.footer_menu_1 != blank -%}
        <div class="col1">
          {%- assign menu_1 = linklists[section.settings.footer_menu_1] -%}
          <nav class="collections">
            <h4>{{ menu_1.title }}</h4>
            <ul class="footNav">
              {%- for link in menu_1.links -%}
                <li>
                  <a itemprop="url" href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        </div>
      {%- endif -%}

      <div class="col2">
        {%- if section.settings.footer_menu_2 != blank -%}
          {%- assign menu_2 = linklists[section.settings.footer_menu_2] -%}
          <nav class="jewellery">
            <h4>{{ menu_2.title }}</h4>
            <ul class="footNav">
              {%- for link in menu_2.links -%}
                <li>
                  <a itemprop="url" href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        {%- endif -%}

        {%- if section.settings.footer_menu_3 != blank -%}
          {%- assign menu_3 = linklists[section.settings.footer_menu_3] -%}
          <nav class="special">
            <h4>{{ menu_3.title }}</h4>
            <ul class="footNav">
              {%- for link in menu_3.links -%}
                <li>
                  <a itemprop="url" href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        {%- endif -%}
      </div>

      <div class="col3">
        {%- if section.settings.footer_menu_4 != blank -%}
          {%- assign menu_4 = linklists[section.settings.footer_menu_4] -%}
          <nav class="info">
            <h4>{{ menu_4.title }}</h4>
            <ul class="footNav">
              {%- for link in menu_4.links -%}
                <li>
                  <a itemprop="url" href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        {%- endif -%}

        {%- if section.settings.footer_menu_5 != blank -%}
          {%- assign menu_5 = linklists[section.settings.footer_menu_5] -%}
          <nav class="follow">
            <h4>{{ menu_5.title }}</h4>
            <ul class="footNav">
              {%- for link in menu_5.links -%}
                <li>
                  <a
                    target="_blank"
                    rel="noopener"
                    itemprop="url"
                    href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        {%- endif -%}
      </div>

      <div class="col4">
        {%- if section.settings.footer_menu_6 != blank -%}
          {%- assign menu_6 = linklists[section.settings.footer_menu_6] -%}
          <nav class="about">
            <h4>{{ menu_6.title }}</h4>
            <ul class="footNav">
              {%- for link in menu_6.links -%}
                <li>
                  <a itemprop="url" href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        {%- endif -%}

        <div class="news">
          <h4>Newsletter</h4>
          <form
            id="newsletterForm"
            method="post"
            action="/contact#contact_form"
            accept-charset="UTF-8">
            <input
              type="hidden"
              name="form_type"
              value="customer">
            <input
              type="hidden"
              name="utf8"
              value="âœ“">
            <input
              type="hidden"
              name="contact[tags]"
              value="newsletter">

            <div class="hm-forms">
              <div class="freeform-row">
                <div class="freeform-column html">
                  <p>Sign up to our newsletter</p>
                </div>
              </div>

              <div class="freeform-row">
                <div class="freeform-column text">
                  <label for="form-input-firstName" class="freeform-label">First Name</label>
                  <input
                    class="freeform-input"
                    name="contact[first_name]"
                    type="text"
                    id="form-input-firstName"
                    placeholder="First Name">
                </div>
                <div class="freeform-column text">
                  <label for="form-input-lastName" class="freeform-label">Last Name</label>
                  <input
                    class="freeform-input"
                    name="contact[last_name]"
                    type="text"
                    id="form-input-lastName"
                    placeholder="Last Name">
                </div>
                <div class="freeform-column email">
                  <label for="form-input-newsletter-email" class="freeform-label freeform-required">Email</label>
                  <input
                    class="freeform-input"
                    name="contact[email]"
                    type="email"
                    id="form-input-newsletter-email"
                    placeholder="Email Address"
                    required>
                </div>
              </div>

              <div class="freeform-row">
                <div class="freeform-column html">
                  <small>By signing up, you accept the terms of Hannah Martin's
                    <a href="/pages/privacy-policy">Privacy Policy</a>.</small>
                </div>
              </div>

              <div class="freeform-row">
                <div class="freeform-column freeform-column-content-align-left submit">
                  <button
                    id="newsubscribe"
                    type="submit"
                    name="subscribe">Subscribe</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="col5">
        {%- if section.settings.footer_menu_7 != blank -%}
          {%- assign menu_7 = linklists[section.settings.footer_menu_7] -%}
          <nav class="contact">
            <h4>{{ menu_7.title }}</h4>
            <ul class="footNav">
              {%- for link in menu_7.links -%}
                <li>
                  {%- if link.url contains 'tel:' or link.url contains 'mailto:' -%}
                    <a itemprop="url" href="{{ link.url }}">{{ link.title }}</a>
                  {%- else -%}
                    <p>{{ link.title }}</p>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        {%- endif -%}

        <div class="payments">
          <h4>Payments Accepted</h4>
          <picture>
            <source srcset="{{ 'payments_accepted@2x.png' | asset_url }} 2x, {{ 'payments_accepted.png' | asset_url }} 1x" media="(min-width: 200px)">
            <img
              src="{{ 'payments_accepted.png' | asset_url }}"
              alt="payment methods Accepted"
              width="188"
              height="23">
          </picture>
        </div>
      </div>

    </div>

    <div class="copyright">
      <p>&copy; {{ 'now' | date: "%Y" }} Hannah Martin Ltd</p>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_menu_1",
        "label": "Collections menu (col1)"
      },
      {
        "type": "link_list",
        "id": "footer_menu_2",
        "label": "Pieces menu (col2 top)"
      },
      {
        "type": "link_list",
        "id": "footer_menu_3",
        "label": "Special menu (col2 bottom)"
      },
      {
        "type": "link_list",
        "id": "footer_menu_4",
        "label": "Online Services menu (col3 top)"
      }, {
        "type": "link_list",
        "id": "footer_menu_5",
        "label": "Follow menu (col3 bottom)"
      }, {
        "type": "link_list",
        "id": "footer_menu_6",
        "label": "About menu (col4)"
      }, {
        "type": "link_list",
        "id": "footer_menu_7",
        "label": "Contact menu (col5)"
      }
    ]
  }
{% endschema %}