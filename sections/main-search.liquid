{% comment %}
  Main Search Results
  Displays search results with filtering
{% endcomment %}

{{ 'component-facets.css' | asset_url | stylesheet_tag }}
{{ 'section-product-grid.css' | asset_url | stylesheet_tag }}

{%- if section.settings.enable_filtering -%}
  <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- liquid
  assign sort_by = search.sort_by | default: search.default_sort_by
  assign terms = search.terms | escape
  assign search_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
-%}

<div class="template-search page-width">
  <div class="template-search__header">
    {%- if search.performed -%}
      <h1>
        {{ 'templates.search.title' | t }}
      </h1>
    {%- else -%}
      <h1>{{ 'general.search.search' | t }}</h1>
    {%- endif -%}

    <div class="template-search__search">
      <form action="{{ routes.search_url }}" method="get" role="search" class="search">
        <div class="field">
          <input
            class="search__input field__input"
            id="Search-In-Template"
            type="search"
            name="q"
            value="{{ search.terms | escape }}"
            placeholder="{{ 'general.search.search' | t }}"
            {%- if settings.predictive_search_enabled -%}
              role="combobox"
              aria-expanded="false"
              aria-owns="predictive-search-results-list"
              aria-controls="predictive-search-results-list"
              aria-haspopup="listbox"
              aria-autocomplete="list"
              autocorrect="off"
              autocomplete="off"
              autocapitalize="off"
              spellcheck="false"
            {%- endif -%}
          >
          <label class="field__label" for="Search-In-Template">
            {{ 'general.search.search' | t }}
          </label>
          <input name="options[prefix]" type="hidden" value="last">
          <button type="submit" class="search__button field__button" aria-label="{{ 'general.search.search' | t }}">
            <svg class="icon icon-search" aria-hidden="true" focusable="false">
              <use href="#icon-search">
            </svg>
          </button>
        </div>
      </form>
    </div>
  </div>

  {%- if search.performed -%}
    {%- if search.results_count == 0 and search.filters == empty -%}
      <div class="template-search--empty">
        <p>{{ 'templates.search.no_results' | t: terms: search.terms }}</p>
      </div>
    {%- else -%}
      <div class="template-search__results">
        <div class="loading-overlay gradient"></div>
        
        {%- paginate search.results by section.settings.products_per_page -%}
          
          {%- if search.filters != empty and section.settings.enable_filtering -%}
            {% render 'facets', results: search, enable_filtering: true, enable_sorting: section.settings.enable_sorting, filter_type: 'drawer' %}
          {%- endif -%}

          <div class="search__results-count">
            <p role="status">
              {{ 'templates.search.results_with_count' | t: terms: search.terms, count: search.results_count }}
            </p>
          </div>

          <div class="products grid containerCat" id="product-grid">
            {%- for item in search.results -%}
              {%- case item.object_type -%}
                {%- when 'product' -%}
                  {% render 'product-card', product: item %}
                {%- when 'article' -%}
                  <div class="article-card">
                    <a href="{{ item.url }}">
                      {%- if item.image -%}
                        <img src="{{ item.image | image_url: width: 600 }}" alt="{{ item.image.alt | escape }}" loading="lazy">
                      {%- endif -%}
                      <h3>{{ item.title }}</h3>
                      {%- if section.settings.article_show_date -%}
                        <time datetime="{{ item.published_at | date: '%Y-%m-%d' }}">
                          {{ item.published_at | date: format: 'month_day_year' }}
                        </time>
                      {%- endif -%}
                    </a>
                  </div>
                {%- when 'page' -%}
                  <div class="page-card">
                    <a href="{{ item.url }}">
                      <h3>{{ item.title }}</h3>
                      {%- if item.content != blank -%}
                        <p>{{ item.content | strip_html | truncatewords: 20 }}</p>
                      {%- endif -%}
                    </a>
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>

          {%- if paginate.pages > 1 -%}
            <div class="pagination-wrapper">
              {% render 'pagination', paginate: paginate %}
            </div>
          {%- endif -%}

        {%- endpaginate -%}
      </div>
    {%- endif -%}
  {%- endif -%}
</div>

<svg style="display: none;">
  <symbol id="icon-search" viewBox="0 0 18 19" fill="none">
    <path fill-rule="evenodd" clip-rule="evenodd" d="M11.03 11.68A5.784 5.784 0 112.85 3.5a5.784 5.784 0 018.18 8.18zm.26 1.12a6.78 6.78 0 11.72-.7l5.4 5.4a.5.5 0 11-.71.7l-5.41-5.4z" fill="currentColor"/>
  </symbol>
</svg>

{% schema %}
{
  "name": "Search Results",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Search Results"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24,
      "label": "Products per page"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "label": "Enable filtering",
      "default": true,
      "info": "Filter search results"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "label": "Enable sorting",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "article_show_date",
      "label": "Show article date",
      "default": true
    }
  ]
}
{% endschema %}
