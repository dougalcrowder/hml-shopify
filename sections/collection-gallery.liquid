{% comment %}
  Collection Gallery
  Image grid at the top of collection pages
{% endcomment %}

{%- if section.settings.enable_section_css -%}
  {{ 'section-collection-gallery.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- if section.blocks.size > 0 -%}
  <div class="collection-gallery thegrid">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'image' -%}
          <div class="row gallery-image" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              {%- if block.settings.link != blank -%}
                <a href="{{ block.settings.link }}">
              {%- endif -%}
              
              <img src="{{ block.settings.image | image_url: width: 600 }}"
                   srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
                           {{ block.settings.image | image_url: width: 600 }} 600w,
                           {{ block.settings.image | image_url: width: 900 }} 900w"
                   sizes="(max-width: 767px) 100vw, (max-width: 1200px) 50vw, 25vw"
                   alt="{{ block.settings.image.alt | default: collection.title }}"
                   loading="lazy">
              
              {%- if block.settings.link != blank -%}
                </a>
              {%- endif -%}
            {%- endif -%}
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Collection Gallery",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_section_css",
      "label": "Enable section CSS",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Collection Gallery"
    }
  ]
}
{% endschema %}
