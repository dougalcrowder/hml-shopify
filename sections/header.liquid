        </svg>
      </h1>
    </a>
  </div>

  <div class="controls flex">
    <button
      class="menu_toggle naked"
      aria-expanded="false"
      aria-controls="mainNav"
      id="menuNavButton">Menu</button>

    <div class="flex rightside">
      <div id="miniCart">
        <div id="cartLi" class="basket cart">
          <a href="{{ routes.cart_url }}">
            <span id="cartCount">Cart
              <sup>{{ cart.item_count }}</sup>
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <nav class="main-navigation flex" id="mainNav">
    <div class="nav-items flex">
      <div class="topnav">
        <button id="navCloseMenu" class="naked">Close</button>

        {%- if section.settings.menu_1 != blank -%}
          <div class="navrow flex">
            {%- assign menu_1 = linklists[section.settings.menu_1] -%}
            <div class="nav">
              {{ menu_1.title }}<br>
              -
              <ul>
                {%- for link in menu_1.links -%}
                  <li itemprop="name">
                    <a
                      itemprop="url"
                      href="{{ link.url }}"
                      {% if link.active %}
                      class="active"
                      {% endif %}>{{ link.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>

            {%- if section.settings.menu_2 != blank -%}
              {%- assign menu_2 = linklists[section.settings.menu_2] -%}
              <div class="nav">
                {{ menu_2.title }}<br>
                -
                <ul>
                  {%- for link in menu_2.links -%}
                    <li itemprop="name">
                      <a
                        itemprop="url"
                        href="{{ link.url }}"
                        {% if link.active %}
                        class="active"
                        {% endif %}>{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.settings.menu_3 != blank -%}
          <div class="navrow flex">
            {%- assign menu_3 = linklists[section.settings.menu_3] -%}
            <div class="nav">
              {{ menu_3.title }}<br>
              -
              <ul>
                {%- for link in menu_3.links -%}
                  <li itemprop="name">
                    <a
                      itemprop="url"
                      href="{{ link.url }}"
                      {% if link.active %}
                      class="active"
                      {% endif %}>{{ link.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          </div>
        {%- endif -%}
      </div>

      <div class="bottomnav">
        {%- if section.settings.menu_4 != blank -%}
          <div class="navrow flex">
            {%- assign menu_4 = linklists[section.settings.menu_4] -%}
            <div class="nav">
              {{ menu_4.title }}<br>
              -
              <ul>
                {%- for link in menu_4.links -%}
                  <li itemprop="name">
                    <a
                      itemprop="url"
                      href="{{ link.url }}"
                      {% if link.active %}
                      class="active"
                      {% endif %}>{{ link.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>

            <div class="nav">
              <div id="secondCart">
                Basket<br>
                -
                <div id="navCart">
                  <ul>
                    {%- if cart.item_count == 0 -%}
                      <li itemprop="name" class="checkout_link">
                        <a itemprop="url" href="{{ routes.cart_url }}">Your cart is empty</a>
                      </li>
                    {%- else -%}
                      {%- for item in cart.items limit: 3 -%}
                        <li itemprop="name">
                          <a itemprop="url" href="{{ item.url }}">{{ item.title }} ({{ item.quantity }})</a>
                        </li>
                      {%- endfor -%}
                      <li itemprop="name" class="checkout_link">
                        <a itemprop="url" href="{{ routes.cart_url }}">View cart ({{ cart.item_count }})</a>
                      </li>
                    {%- endif -%}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </nav>
</header>

{% schema %}
  {
    "name": "Header",
    "class": "site_header",
    "settings": [
      {
        "type": "link_list",
        "id": "menu_1",
        "label": "Menu 1 (Collections)",
        "default": "main-menu"
      }, {
        "type": "link_list",
        "id": "menu_2",
        "label": "Menu 2 (Pieces)",
        "info": "Shown in same row as Menu 1"
      }, {
        "type": "link_list",
        "id": "menu_3",
        "label": "Menu 3 (Special)"
      }, {
        "type": "link_list",
        "id": "menu_4",
        "label": "Menu 4 (About)"
      }
    ]
  }
{% endschema %}