<img
  src="{{ block.settings.image | image_url: width: 800 }}"
  alt="{{ block.settings.image.alt | escape }}"
  loading="lazy">

{% schema %}
  {
    "name": "Scrolling Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
  "presets": [
    {
      "name": "Scrolling Image"
    }
  ]
  }
{% endschema %}